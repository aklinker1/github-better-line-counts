{
  "name": "GitHub: Better Line Counts",
  "description": "Remove generated files from the total line counts on GitHub PRs",
  "private": true,
  "version": "1.5.2",
  "type": "module",
  "scripts": {
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "compile": "vue-tsc --noEmit",
    "dev": "wxt",
    "dev:firefox": "wxt --browser firefox",
    "build": "wxt build",
    "build:firefox": "wxt build --browser firefox",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "zip": "tsx scripts/zip.ts chrome",
    "zip:firefox": "tsx scripts/zip.ts firefox",
    "zip:sources": "tsx scripts/zip-sources.ts",
    "prepare": "husky install",
    "postinstall": "wxt prepare",
    "submit": "env-cmd -f ./.env.submit ./scripts/submit.sh",
    "submit:dry": "pnpm -s submit --dry-run"
  },
  "dependencies": {
    "@vueuse/core": "^9.13.0",
    "@webext-core/messaging": "^1.4.0",
    "@webext-core/proxy-service": "^1.2.0",
    "@webext-core/storage": "^1.1.2",
    "async-mutex": "^0.4.0",
    "daisyui": "^2.50.1",
    "fast-deep-equal": "^3.1.3",
    "minimatch": "^9.0.3",
    "ofetch": "^1.1.1",
    "vue-query": "^1.26.0"
  },
  "devDependencies": {
    "@aklinker1/generate-changelog": "^1.1.2",
    "@iconify/json": "^2.2.91",
    "@types/jsdom": "^21.1.1",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vitest/coverage-v8": "^0.33.0",
    "autoprefixer": "^10.4.14",
    "env-cmd": "^10.1.0",
    "fast-glob": "^3.3.0",
    "husky": "^8.0.3",
    "jsdom": "^22.1.0",
    "postcss": "^8.4.26",
    "prettier": "^2.8.4",
    "pretty-quick": "^3.1.3",
    "publish-browser-extension": "^1.3.0",
    "tailwindcss": "^3.3.3",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6",
    "unplugin-auto-import": "^0.16.6",
    "unplugin-icons": "^0.16.5",
    "vitest": "^0.33.0",
    "vue": "^3.3.4",
    "vue-tsc": "^1.8.5",
    "wxt": "^0.2.2",
    "zip-a-folder": "^2.0.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowAny": [
        "node-fetch"
      ]
    }
  }
}
